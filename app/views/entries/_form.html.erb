<%= form_with(model: entry, local: true) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :meal_type, class: 'label' %>
    <div class="control">
      <%= form.text_field :meal_type, placeholder: 'Your meal type, ex: morning, lunch, ...', class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :calories, class: 'label' %>
    <%= form.number_field :calories, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :proteins, class: 'label' %>
    <%= form.number_field :proteins, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :carbohydrates, class: 'label' %>
    <%= form.number_field :carbohydrates, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :fats, class: 'label' %>
    <%= form.number_field :fats, class: 'input' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'button has-background-white' %>
  </div>
<% end %>
